{
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    }
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "rules": {
    "block-scoped-var": 1,
    "curly": "off",
    "eqeqeq": 2,
    "func-call-spacing": [
      "error",
      "never"
    ],
    "guard-for-in": 2,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "keyword-spacing": 2,
    "max-len": [1, 180, 4],
    "no-continue": 1,
    "no-debugger": 2,
    "no-eval": 2,
    "no-console": "off",
    "no-extra-semi": 1,
    "no-irregular-whitespace": 0,
    "no-shadow": 1,
    "no-trailing-spaces": 2,
    "no-unexpected-multiline": "warn",
    "no-unreachable": 1,
    "no-unused-expressions": 1,
    "no-unused-vars": "warn",
    "quotes": [ 2, "single" ],
    "react/display-name": 1,
    "react/jsx-key": 1,
    "react/jsx-uses-vars": 1,
    "react/no-unescaped-entities": [1],
    "react/prefer-es6-class": 1,
    "react/prop-types": [2, { "ignore": ["children"]}],
    "semi": [ 2, "always" ],
    "spaced-comment": [2, "always" ],
    "strict": ["error", "global"],
    "vars-on-top": 2,
    "valid-typeof": 2
  }
}
